@model Dotnet_frameworks_project.Models.Test
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["Details"]</h1>

<div>
    <h4> @Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           
         @Localizer["Description"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
           
         @Localizer["Usage"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usage)
        </dd>
        <dt class = "col-sm-2">
          
         @Localizer["Minimal age"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Min_age)
        </dd>
        <dt class = "col-sm-2">
         
         @Localizer["Maximal age"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Max_age)
        </dd>
    </dl>
</div>
<div>
    <a class="waves-effect waves-light btn-small" asp-action="Edit" asp-route-id="@Model?.Name">@Localizer["Edit"]</a> 
    <a class="waves-effect waves-light btn-small" asp-action="Index">@Localizer["Back to List"]</a>
</div>


<h3 class="center-align">@Localizer["Patients"]</h3>


    <table class="striped highlight centered responsive-table" >
        <thead>
            <tr>
                <th>@Localizer["Firstname"]</th>
                <th>@Localizer["Lastname"]</th>
            </tr>
        </thead>

        <tbody>
            @{
                foreach (var patient in ViewBag.HasPassedTheTest)
                {
                    <tr>
                        <td>@patient.p.FirstName</td>
                        <td>@patient.p.LastName</td>
                       
                    </tr>
                }


            }
        </tbody>
    </table>
