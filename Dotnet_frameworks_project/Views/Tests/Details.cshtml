@model Dotnet_frameworks_project.Models.Test

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Test</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Min_age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Min_age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Max_age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Max_age)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Name">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


<h3 class="center-align">Patients</h3>


    <table class="striped highlight centered responsive-table" >
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
            </tr>
        </thead>

        <tbody>
            @{
                foreach (var patient in ViewBag.HasPassedTheTest)
                {
                    <tr>
                        <td>@patient.p.FirstName</td>
                        <td>@patient.p.LastName</td>
                       
                    </tr>
                }


            }
        </tbody>
    </table>
