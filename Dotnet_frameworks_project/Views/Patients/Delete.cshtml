@model Dotnet_frameworks_project.Models.Patient
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["Delete"]</h1>

<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4> @Html.DisplayFor(model => model.FirstName)  @Html.DisplayFor(model => model.LastName)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer["Firstname"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
           @Localizer["Lastname"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
           @Localizer["Birthday"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Birthday)
        </dd>
        <dt class = "col-sm-2">
           @Localizer["Phone"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParentsPhone)
        </dd>
        <dt class = "col-sm-2">
          @Localizer["Left sessions"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LeftSessions)
        </dd>
        <dt class = "col-sm-2">
           @Localizer["Therapist"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user.Id)
        </dd>
           <dt class = "col-sm-2">
           @Localizer["Gender"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gender.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="waves-effect waves-light btn-small" asp-action="Index">@Localizer["Back to List"]</a>
         <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" style="background-color:red;" /> 
    </form>
</div>
