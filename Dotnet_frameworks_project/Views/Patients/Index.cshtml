@model IEnumerable<Dotnet_frameworks_project.Models.Patient>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentsPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeftSessions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FollowUp_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.user)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentsPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeftSessions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FollowUp_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.user.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
   
<a class="btn-floating btn-large waves-effect waves-light red"  asp-action="Create"><i class="material-icons">add</i></a>
</p>

