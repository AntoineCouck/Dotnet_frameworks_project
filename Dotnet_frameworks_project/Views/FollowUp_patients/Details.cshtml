@model Dotnet_frameworks_project.Models.FollowUp_patients
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["Details"]</h1>

<div>
    <h4>@Localizer["Followed patient"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          @Localizer["Type of follow-up"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FollowUpId)
        </dd>
        <dt class = "col-sm-2">
           @Localizer["Patient"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.FirstName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@Localizer["Edit"]</a> |
    <a asp-action="Index">@Localizer["Back to List"]</a>
</div>
