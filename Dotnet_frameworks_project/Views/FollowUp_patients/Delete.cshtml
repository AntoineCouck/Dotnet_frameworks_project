@model Dotnet_frameworks_project.Models.FollowUp_patients
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["Delete"]</h1>

<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4> @Html.DisplayFor(model => model.Patient.FirstName) →  @Html.DisplayFor(model => model.FollowUpId) </h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           @Localizer["Type of follow-up"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FollowUpId)
        </dd>
        <dt class = "col-sm-2">
            @Localizer["Patient"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.FirstName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="waves-effect waves-light btn" asp-action="Index">@Localizer["Back to List"]</a>
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" style="background-color:red;" /> 
        
    </form>
</div>
