@model Dotnet_frameworks_project.Models.FollowUp_type
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["Details of the follow-up type"]</h1>

<div>
    <h4>@ViewBag.followUpName</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           @Localizer["Description"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
           @Localizer["Required sessions"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number_of_requiredsessions)
        </dd>
    </dl>
</div>
<div>
    <a class="waves-effect waves-light btn" asp-action="Edit" asp-route-id="@Model.Name">@Localizer["Edit"]</a> 
    <a  class="waves-effect waves-light btn"asp-action="Index">@Localizer["Back to List"]</a>
</div>
