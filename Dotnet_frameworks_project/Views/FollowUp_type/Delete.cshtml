@model Dotnet_frameworks_project.Models.FollowUp_type
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Localizer["Delete this follow-up type"]</h2>

<h4>@Localizer["Are you sure you want to delete this?"]</h4>
<div>
    <h4>@ViewBag.followUpName</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           @Localizer["Description"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Localizer["Required sessions"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number_of_requiredsessions)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Name" />
           <a class="waves-effect waves-light btn" asp-action="Index">@Localizer["Back to List"]</a>
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" style="background-color:red;" /> 
     
    </form>
</div>
