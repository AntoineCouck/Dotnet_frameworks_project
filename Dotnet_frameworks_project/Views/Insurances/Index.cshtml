@model IEnumerable<Dotnet_frameworks_project.Models.Insurance>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["List of all insurances"]</h1>

<p>
    <a asp-action="Create">@Localizer["Create New insurance"]</a>
</p>
<table class="table">
    <thead>
        <tr>
              <th>
                @Localizer["Name"]
            </th>
            <th>
               @Localizer["Adres"]
            </th>
            <th>
               @Localizer["Phone"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
              <td>
                @item.Name
             </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Name">@Localizer["Edit"]</a> |
                <a asp-action="Details" asp-route-id="@item.Name">@Localizer["Details"]</a> |
                <a asp-action="Delete" asp-route-id="@item.Name">@Localizer["Delete"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
