@model Dotnet_frameworks_project.Models.Insurance

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Insurance</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adres)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adres)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
</div>
<div>
<h2>Member of the insurance:</h2>

        <table class="striped highlight centered responsive-table" >
        <thead>
          <tr>
              <th>FirstName</th>
              <th>LastName</th>
             
          </tr>
        </thead>

        <tbody>
            @{

        foreach(var patient in ViewBag.Patients)
        {
          <tr>
            <td>@patient.FirstName</td>
            <td>@patient.LastName</td>
          </tr>
        }

 }

        </tbody>
      </table>




<p></p>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Name">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
