@model Dotnet_frameworks_project.Models.PassedTests
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["Details of the passed test"]</h1>

<div>
    <h4>@Localizer["Passed Tests"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           @Localizer["Patient"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.FirstName)
        </dd>
        <dt class = "col-sm-2">
           @Localizer["Test"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Test.Name)
        </dd>
    </dl>
</div>
<div>
    <a class="waves-effect waves-light btn" asp-action="Edit" asp-route-id="@Model?.Id">@Localizer["Edit"]</a> 
    <a class="waves-effect waves-light btn" asp-action="Index">@Localizer["Back to List"]</a>
</div>
