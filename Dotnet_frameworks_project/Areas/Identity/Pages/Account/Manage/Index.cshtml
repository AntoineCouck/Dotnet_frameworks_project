@page
@using Dotnet_frameworks_project.Models
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


<h3>@Localizer["Profile"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label">@Localizer["Username"]</label>
            </div>
             <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control"  />
                <label asp-for="Input.FirstName" class="form-label">@Localizer["Firstname"]</label>
            </div>
             <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control"  />
                <label asp-for="Input.LastName" class="form-label">@Localizer["Lastname"]</label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label">@Localizer["Phone"]</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <select asp-for="Input.LanguageId" class="form-control">
                    @foreach (Language l in (List<Language>)ViewData["Languages"])
                    {
                        <option value=@l.Id>@l.Name</option>
                    }
                </select>
                <label asp-for="Input.LanguageId" class="form-label">@Localizer["Language choice"]</label>
            </div>
            <br />
             <label>@Localizer["Use cookies?"]</label>
            <div class="form-floating" style="margin-top:5%">
             <div class="switch">
             <label>
                @Localizer["Off"]
             <input asp-for="Input.AcceptCookies" type="checkbox">
             <span class="lever"></span>
               @Localizer["On"]
              </label>
            </div>
            </div>
            <button style="margin-top:5%" id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">@Localizer["Save"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
